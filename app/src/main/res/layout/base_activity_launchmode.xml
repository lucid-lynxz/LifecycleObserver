<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_from_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start by app"/>


            <CheckBox
                android:id="@+id/cb_start_for_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="start for result"/>
        </LinearLayout>


        <Spinner
            android:id="@+id/sr_flag"
            style="@style/slp_spinner_dropdown_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tv_standard"
            style="@style/common_btn"
            android:text="start StandardActivity"/>

        <TextView
            android:id="@+id/tv_standard_b"
            style="@style/common_btn"
            android:text="start StandardAct with taskAffinity"/>

        <TextView
            android:id="@+id/tv_single_top"
            style="@style/common_btn"
            android:text="start SingleTopActivity"/>

        <TextView
            android:id="@+id/tv_single_task"
            style="@style/common_btn"
            android:text="start SingleTask_A"/>

        <TextView
            android:id="@+id/tv_single_task_b"
            style="@style/common_btn"
            android:text="start SingleTask_B"/>

        <TextView
            android:id="@+id/tv_single_task_c"
            style="@style/common_btn"
            android:text="start SingleTask_C with taskAffinity"/>


        <TextView
            android:id="@+id/tv_singe_instance"
            style="@style/common_btn"
            android:text="start SingleInstance_A"/>

        <TextView
            android:id="@+id/tv_singe_instance_b"
            style="@style/common_btn"
            android:text="start SingleInstance_B"/>

        <TextView
            android:id="@+id/tv_show_dialog"
            style="@style/common_btn"
            android:text="show alert dialog"/>
    </LinearLayout>
</ScrollView>